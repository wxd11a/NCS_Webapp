<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:metal="http://xml.zope.org/namespaces/metal"
	xmlns:tal="http://xml.zope.org/namespaces/tal"
	metal:define-macro="layout">

<head>
	<title>Client - ${title}</title>
	<more metal:define-slot="head-more"></more>
	<link rel="stylesheet" href="${request.static_url('webapp:static/conformity.css')}"/>
</head>
<body>
	<div id="loginout">
		<a tal:condition="view.logged_in is not None" href="${request.application_url}/logout">Logout</a>
		<a tal:condition="view.logged_in is None" href="${request.application_url}/login">Log In</a>
	</div>

	<div id="main">
		<h1>
			<a href="${request.route_url('client_view')}">
				<img src="${request.static_url('webapp:static/logo.png')}" alt="Logo"/></a>
			${title}</h1>

		<div metal:define-slot="content"></div>

	</div>
</body>
</html>
